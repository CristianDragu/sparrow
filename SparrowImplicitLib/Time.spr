package Time;

import SprCore.NumericOper;

public fun[rtct, native("clock")] clock(): Int;

public class[rtct] Timer
{
    public fun ctor() { startTime = clock(); }
    public fun ctor(other: Timer) { startTime = other.startTime; }

    public fun elapsed = Double(clock() - startTime) / 1000.0;

    public fun restart { startTime = clock(); }

    private var startTime: Int;
}
