import basicDecls(StringRef, Char, Int, Long, Double, typeOf);

[rtct] fun asInt(src: StringRef)       = StringCvtImpl.atoi(src.cStr());
[rtct] fun asLong(src: StringRef)      = StringCvtImpl.atoll(src.cStr());
[rtct] fun asDouble(src: StringRef)    = StringCvtImpl.atof(src.cStr());

package StringCvtImpl
{
    [rtct, native("atoi")] fun atoi(str: @Char): Int;
    [rtct, native("atoll")] fun atoll(str: @Char): Long;
    [rtct, native("atof")] fun atof(str: @Char): Double;
}
