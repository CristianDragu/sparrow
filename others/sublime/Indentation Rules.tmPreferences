<?xml version="1.0" encoding="UTF-8"?>
<plist version="1.0">
<dict>
	<key>scope</key>
	<string>source.sparrow</string>
	<key>settings</key>
	<dict>
		<key>increaseIndentPattern</key>
		<string>^.*\{[^}"']*$</string>
		<key>decreaseIndentPattern</key>
		<string>^(.*\*/)?\s*\}([^}{"']*\{)?[;\s]*(//.*|/\*.*\*/\s*)?$</string>

		<key>bracketIndentNextLinePattern</key>
		<string>(?x)
		^ \s* \b(if|while|else|for|class|datatype|fun)\b [^;]* $
		</string>

	</dict>
</dict>
</plist>
