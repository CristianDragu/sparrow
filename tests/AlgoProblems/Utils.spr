///////////////////////////////////////////////////////////////////////////////
// Timing functionality
//

[native("clock")] fun clock(): Int;

class Timer
{
    fun ctor(this: @Timer) { _startTime = clock(); }
    //fun ctor(other: Timer) { _startTime = other._startTime; }

    fun elapsed = Double(clock() - _startTime) / 1000.0;

    fun restart { _startTime = clock(); }

    var _startTime: Int;
}

///////////////////////////////////////////////////////////////////////////////
// Useful operators
//

[ct] fun ^(base, exp: Int): ULong
    var res: ULong = 1;
    var i = 0;
    while i<exp; ++i
        res *= ULong(base);
    return res;
