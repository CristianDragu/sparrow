///////////////////////////////////////////////////////////////////////////////
// Timing functionality
//

fun[native("clock")] clock(): Int;

class Timer
{
    fun ctor() { _startTime = clock(); }
    fun ctor(other: Timer) { _startTime = other._startTime; }

    fun elapsed = Double(clock() - _startTime) / 1000.0;

    fun restart { _startTime = clock(); }

    var _startTime: Int;
}

///////////////////////////////////////////////////////////////////////////////
// Useful operators
//

fun[ct] ^(base, exp: Int): ULong
{
    var res: ULong = 1;
    var i = 0;
    while ( i<exp; ++i )
        res *= ULong(base);
    return res;
}
